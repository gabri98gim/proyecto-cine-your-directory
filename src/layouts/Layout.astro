---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ListManager from '../islas/ListManager.jsx';
import SeedDiaryData from '../components/SeedDiaryData.jsx';
import '../styles/global.css';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/mi-favicon.png" />
    <title>{title ?? 'Proyecto Cine'}</title>
  </head>
  <body class="min-h-screen bg-[#14181c] font-sans text-gray-100">
    <SeedDiaryData client:load />
    
    <ListManager client:load>
      <main>
        <slot />
      </main>
    </ListManager>
    <Footer />
  </body>
</html>