---
import { getImageUrl } from '../services/tmdb';

interface Props {
  id: number;
  title: string;
  posterPath: string | null;
  releaseDate: string;
  voteAverage: number;
}

const { id, title, posterPath, releaseDate, voteAverage } = Astro.props;
const posterUrl = getImageUrl(posterPath, 'w300');
const year = releaseDate ? new Date(releaseDate).getFullYear() : 'N/A';
const rating = voteAverage ? (voteAverage / 2).toFixed(1) : '0.0'; // Convertir de 10 a 5 estrellas
---

<div class="movie-card group relative">
  <a href={`/movie/${id}`} class="block">
    <!-- Poster -->
    <div class="relative aspect-2/3 overflow-hidden rounded-md bg-gray-800 shadow-lg">
      <img
        src={posterUrl}
        alt={title}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
        loading="lazy"
      />
      
      <!-- Overlay on hover -->
      <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-60 transition-all duration-300 flex items-center justify-center opacity-0 group-hover:opacity-100">
        <div class="text-center px-4">
          <svg class="w-12 h-12 text-white mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <p class="text-white text-sm font-medium">Ver detalles</p>
        </div>
      </div>

      <!-- Rating Badge -->
      {voteAverage > 0 && (
        <div class="absolute top-2 right-2 bg-black bg-opacity-80 text-white px-2 py-1 rounded-full text-xs font-bold flex items-center gap-1">
          <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          {rating}
        </div>
      )}
    </div>

    <!-- Info -->
    <div class="mt-2">
      <h3 class="text-white font-medium text-sm line-clamp-2 group-hover:text-accent-purple-light transition-colors duration-150">
        {title}
      </h3>
      <p class="text-gray-400 text-xs mt-1">{year}</p>
    </div>
  </a>

  <!-- Quick Actions (aparecen en hover) -->
  <div class="absolute top-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex gap-2">
    <button 
      class="action-btn bg-black bg-opacity-80 hover:bg-opacity-100 text-white p-2 rounded-full transition-all duration-150"
      title="Agregar a lista"
      onclick="event.preventDefault(); event.stopPropagation();"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    </button>
    <button 
      class="action-btn bg-black bg-opacity-80 hover:bg-opacity-100 text-white p-2 rounded-full transition-all duration-150"
      title="Marcar como vista"
      onclick="event.preventDefault(); event.stopPropagation();"
    >
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </button>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .action-btn:hover {
    transform: scale(1.1);
  }
</style>