---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro'; 
// Importamos la nueva isla
import DashboardClient from '../islas/DashboardClient.jsx';
---

<Layout title="Dashboard - Your Directory">
  <Navbar />
  
  <div class="min-h-screen bg-[#14181c] pt-12 pb-20 px-4">
    <div class="max-w-5xl mx-auto">
      
      <header class="mb-10 text-center md:text-left">
        <h1 class="text-4xl font-bold text-white mb-3 tracking-tight">
          Tu <span style="color: #ba87d0;">Dashboard</span>
        </h1>
        <p class="text-gray-400 text-lg">
          Un resumen estadístico de tu vida cinematográfica.
        </p>
      </header>

      <DashboardClient client:only="react" />
      
    </div>
  </div>
</Layout>